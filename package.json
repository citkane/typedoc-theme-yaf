{
	"name": "typedoc-theme-yaf",
	"version": "0.0.0",
	"description": "Typedoc custom theme for YAF-Scaffold",
	"main": "./src/index",
	"workspaces": [
		"tsconfig"
	],
	"scripts": {
		"test": "tsc --build && nyc mocha",
		"test:backend": "tsc --build && nyc mocha",
		"test:frontend": "tsc --build && wtr test/dist/frontend/**/*.spec.js --node-resolve --coverage --playwright --browsers firefox",
		"docs": "typedoc",
		"build": "./scripts/build.sh",
		"build:css": "sass src/assets/scss/yafStyle.scss:dist/src/assets/yafStyle.css --style compressed",
		"build:css:watch": "sass --watch src/assets/scss/yafStyle.scss:dist/src/assets/yafStyle.css --style compressed",
		"build:webComponents:watch": "./scripts/watchComponents.js"
	},
	"author": "Michael Jonker",
	"license": "MIT",
	"devDependencies": {
		"@open-wc/testing": "^3.0.0-next.5",
		"@typedoc-theme-yaf/tsconfig": "*",
		"@types/chai": "^4.3.3",
		"@types/chai-as-promised": "^7.1.5",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.0.3",
		"@types/prettier": "^2.7.0",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"@web/test-runner": "^0.14.0",
		"@web/test-runner-playwright": "^0.8.10",
		"@web/test-runner-puppeteer": "^0.10.5",
		"chai": "^4.3.6",
		"chai-as-promised": "^7.1.1",
		"chokidar": "^3.5.3",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"prettier": "2.7.1",
		"sass": "^1.53.0",
		"source-map-support": "^0.5.21",
		"typedoc-plugin-hot-dev": "^0.0.10",
		"typedoc-plugin-versions": "^0.1.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@wooorm/starry-night": "^1.3.0",
		"fs-extra": "^10.1.0",
		"hast-util-to-html": "^8.0.3",
		"typedoc": "^0.23"
	},
	"peerDependencies": {
		"typedoc": "^0.23"
	},
	"mocha": {
		"file": "./test/dist/backend/index.spec.js",
		"require": [
			"./test/dist/backend/hooks.js",
			"source-map-support/register"
		],
		"exit": true
	},
	"nyc": {
		"reporter": [
			"text",
			"html"
		],
		"report-dir": "test/coverage",
		"temp-dir": "test/.nyc_output"
	}
}
