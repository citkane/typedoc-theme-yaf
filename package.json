{
	"name": "typedoc-theme-yaf",
	"version": "0.0.0",
	"description": "Typedoc custom theme for YAF-Scaffold",
	"main": "./src/index",
	"workspaces": [
		"tsconfig"
	],
	"scripts": {
		"test": "prettier -c . && mocha",
		"docs": "typedoc",
		"build": "npx tsc --build && node scripts/build.js",
		"build:css": "sass src/assets/scss/style.scss:dist/src/assets/style.css --style compressed",
		"build:css:watch": "sass --watch src/assets/scss/style.scss:dist/src/assets/style.css --style compressed",
		"build:webComponents:watch": "./scripts/watchComponents.js"
	},
	"author": "Michael Jonker",
	"license": "MIT",
	"devDependencies": {
		"@typedoc-theme-yaf/tsconfig": "*",
		"@types/chai": "^4.3.3",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.0.3",
		"@types/prettier": "^2.7.0",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"chai": "^4.3.6",
		"chokidar": "^3.5.3",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"fs-extra": "^10.1.0",
		"mocha": "^10.0.0",
		"prettier": "2.7.1",
		"sass": "^1.53.0",
		"ts-node": "^10.9.1",
		"typedoc": "file:../yaf-scaffold/node_modules/typedoc",
		"typedoc-plugin-hot-dev": "^0.0.11",
		"typescript": "^4.7.4"
	},
	"peerDependencies": {
		"typedoc": "^0.23"
	},
	"mocha": {
		"extension": [
			"ts",
			"tsx"
		],
		"file": "./tests/index.spec.ts",
		"require": [
			"ts-node/register",
			"source-map-support/register",
			"./tests/hooks.ts"
		],
		"exit": true
	}
}
