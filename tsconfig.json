{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "dist",
		"jsx": "react",
		"jsxFactory": "JSX.createElement",
		"jsxFragmentFactory": "JSX.Fragment",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
	},
	"include": [
		"dev/**/*.*",
		"src/**/*.*"
	],
	"exclude": [
		"node_modules"
	]
}
